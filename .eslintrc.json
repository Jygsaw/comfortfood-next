{
  "extends": "next/core-web-vitals",
  "plugins": [
    "@stylistic/js",
    "@stylistic/ts"
  ],
  "rules": {
    "no-unused-vars": 2,
    "@stylistic/js/object-curly-spacing": [2, "always"],
    "@stylistic/js/eol-last": 2,
    "@stylistic/js/indent": 2,
    "@stylistic/js/no-extra-semi": 2,
    "@stylistic/js/no-multi-spaces": 2,
    "@stylistic/js/no-multiple-empty-lines": [2, { "max": 1 }],
    "@stylistic/js/no-trailing-spaces": 2,
    "@stylistic/js/quotes": 2,
    "@stylistic/js/semi": 2,
    "@stylistic/js/space-in-parens": 2,
    "@stylistic/ts/type-annotation-spacing": 2
  }
}
